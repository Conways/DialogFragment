<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">


    <TextView
        android:id="@+id/dialog_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="标题"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_alert_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:text="提示内容"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_alert_title"/>

    <TextView
        android:id="@+id/dialog_alert_action_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bt_alert_dialog_cancel"
        android:paddingLeft="40dp"
        android:paddingTop="6dp"
        android:paddingRight="40dp"
        android:paddingBottom="6dp"
        android:layout_marginLeft="16dp"
        android:text="取消"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_alert_action_right"
        app:layout_constraintTop_toBottomOf="@id/dialog_alert_content"/>

    <TextView
        android:id="@+id/dialog_alert_action_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bt_alert_dialog_ok"
        android:paddingLeft="40dp"
        android:paddingTop="6dp"
        android:paddingRight="40dp"
        android:paddingBottom="6dp"
        android:layout_marginRight="16dp"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/dialog_alert_action_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_alert_content"/>

</android.support.constraint.ConstraintLayout>
